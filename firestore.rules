
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read/write access to tasks, tests, and syllabuses for any authenticated user.
    // This is a secure starting point, as only users who have logged in can modify data.
    // For more granular control, you could add rules to ensure users can only edit their *own* documents.
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }

    match /tests/{testId} {
      allow read, write: if request.auth != null;
    }

    match /syllabuses/{syllabusId} {
      allow read, write: if request.auth != null;
    }
  }
}
